<!DOCTYPE html>
<html lang="en">

<%- include('layouts/header'); -%>

    <body>

        <!-- Navigation -->
        <%- include('layouts/navbar'); -%>
            <!-- Post Content -->

            <div class="row">
                <div class="container">
                    <nav class="navbar navbar-expand-lg">
                        <h3>WATCHING LIST</h3>
                        <ul class="navbar-nav ml-auto">
                            <form class="form-inline" action="/somepage">
                                <input class="form-control mr-sm-2" type="text" placeholder="Search">
                            </form>
                        </ul>
                    </nav>
                </div>
            </div>
            <div id="function">
                <div class="container">
                    <div class="mains">
                        <% Hospitals.forEach((hospital) => { %>
                            <div class="forms">
                                <div class="container">
                                    <nav class="navbar navbar-expand-lg">
                                        <input class="form-control" type="text" name="iD" valua="<%= hospital.id %>" hidden/>
                                        <h4>
                                            <%= hospital.hospitalName %>
                                        </h4>
                                        <ul class="navbar-nav ml-auto">
                                            <form class="form-inline" action="">
                                                <a href="/information-hospital/<%= hospital.id %>" id="save-btn" class="btn btn-primary btn-user btn-search">View</a> </form>
                                        </ul>
                                    </nav>
                                </div>
                                <div class="container">
                                    <div class="watching-list-content">
                                        <div class=" col-sm-6">
                                            <%= hospital.description %>
                                        </div>
                                        <div class="form-group">
                                            <!-- <label for="img">Image Hospital</label> -->
                                            <img class="watching-img" src="/public/upload/<%= hospital.imageHospital %>">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>
            </div>
            <br>

            <div id="pages">
                <nav class="navbar navbar-expand-lg">
                    <ul class="pagination">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">Page</a>
                        </li>
                        <li class="page-item active">
                            <a class="page-link" href="#">1 <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">2</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>

            <!-- Footer -->

            <%- include('layouts/footer'); -%>
                <%- include('layouts/logout'); -%>
                    <%- include('layouts/scripts'); -%>

    </body>

</html>