<!DOCTYPE html>
<html lang="en">

<%- include('layouts/header'); -%>

    <body id="page-top">

        <!-- Page Wrapper -->
        <div id="wrapper">

            <%- include('layouts/navbar'); -%>

                <!-- Content Wrapper -->
                <div id="content-wrapper" class="d-flex flex-column">

                    <!-- Main Content -->
                    <div id="content">

                        <%- include('layouts/topbar'); -%>
                            <!-- BOdy-->

                            <!-- Begin Page Content -->
                            <div class="container-fluid">
                                <!-- Page Heading -->
                                <h1 class="h3 mb-2 text-gray-800">List Patient</h1>
                                <!-- DataTales Example -->
                                <div class="card shadow mb-4">
                                    <div class="card-header py-3">
                                        <h6 class="m-0 font-weight-bold text-primary">DataTables</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                                <thead>
                                                    <tr>
                                                        <th>ID</th>
                                                        <th>First name</th>
                                                        <th>Last name</th>
                                                        <th>Gender</th>
                                                        <th>Nationality</th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <!-- <tfoot>
                                                    <tr>
                                                        <th>ID</th>
                                                        <th>First name</th>
                                                        <th>Last name</th>
                                                        <th>Gender</th>
                                                        <th>Nationality</th>
                                                        <th>Country of residence</th>
                                                        <th></th>
                                                    </tr>
                                                </tfoot> -->
                                                <tbody>
                                                    <% Users.forEach((user) => { %>
                                                        <tr ondblclick="handleUpdateProduct('<%= user.id %>')">
                                                            <td>
                                                                <%= user.id %>
                                                            </td>
                                                            <td>
                                                                <%= user.firstName %>
                                                            </td>
                                                            <td>
                                                                <%= user.lastName %>
                                                            </td>
                                                            <td>
                                                                <%= user.gender %>
                                                            </td>
                                                            <td>
                                                                <%= user.nationality %>
                                                            </td>
                                                            <td>
                                                                <input class="btn btn-primary btn-user" type="button" value="Edit" onclick="handleUpdateProduct('<%= user.id %>')">
                                                            </td>
                                                        </tr>
                                                        <% }) %>
                                                </tbody>
                                            </table>
                                            <script>
                                                function handleUpdateProduct(value) {
                                                    $(location).attr('href', '/information-patient/' + value);
                                                }
                                            </script>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- end body-->

                    </div>
                    <!-- End of Main Content -->

                    <%- include('layouts/footer'); -%>

                </div>
                <!-- End of Content Wrapper -->

        </div>
        <!-- End of Page Wrapper -->

        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>

        <!-- Logout Modal-->
        <%- include('layouts/logout'); -%>

            <%- include('layouts/script'); -%>

    </body>

</html>