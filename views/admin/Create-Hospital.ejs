<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Create new hospital</title>

    <!-- Custom fonts for this template-->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/css/admin.css" rel="stylesheet" type="text/css">
</head>

<body class="bg-gradient-primary">
    <div class="container" style="width: 728px;">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row ">
                    <div class="col-lg-5 d-none d-lg-block"></div>
                    <div class="col-lg-7 ">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create new hospital</h1>
                            </div>
                            <form action="/create-hospital" method="POST" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="hospitalName">Name hospital</label>
                                    <input type="text" id="hospitalName" name="hospitalName" class="form-control" placeholder="Enter hospital name" />
                                </div>
                                <div class="form-group">
                                    <label for="phoneNumber">Phone number</label>
                                    <input type="tel" id="phoneNumber" name="phoneNumber" class="form-control" placeholder="Enter phone number" />
                                </div>
                                <div class="form-group">
                                    <label for="address">Address</label>
                                    <input id="address" name="address" class="form-control" placeholder="Enter address" />
                                </div>
                                <div class="form-group">
                                    <label for="subsidiaries">Subsidiaries</label>
                                    <input id="subsidiaries" name="subsidiaries" class="form-control" placeholder="Enter subsidiaries" />
                                </div>
                                <div class="form-group">
                                    <label for="description">Description</label>
                                    <input id="description" name="description" class="form-control" placeholder="Enter description" />
                                </div>
                                <div class="form-group">
                                    <label for="img">Image Hospital</label>
                                    <input type="file" name="imageHospital" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-create">Create new hospital</button>
                                </div>
                                <div class="form-group">
                                    <a href="/admin" class="btn btn-primary btn-user btn-return">Return</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('layouts/script'); -%>
</body>

</html>